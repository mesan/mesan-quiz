<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_row_min_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/menu_item_content_description"
        android:layout_marginLeft="@dimen/padding_m"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textViewMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_m"
        android:textColor="@color/mesan_light_grey"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>