<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.mesan.mesanquiz.view.question.QuestionFragment"
    android:orientation="vertical"
    android:padding="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:layout_weight="1"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LargeTextSizeStyle"
            android:text="3/10:"
            android:id="@+id/statusTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LargeTextSizeStyle"
            android:text="Hvilket fjell er Norges tredje høyeste?"
            android:id="@+id/questionTextView"
            android:layout_marginTop="16dp"
            />

        <Button
            style="@style/QuestionButtonStyle"
            android:layout_height="wrap_content"
            android:text="Vesle Galdhøpiggen"
            android:id="@+id/button1"/>

        <Button
            style="@style/QuestionButtonStyle"
            android:layout_height="wrap_content"
            android:text="Snøhetta"
            android:id="@+id/button2" />

        <Button
            style="@style/QuestionButtonStyle"
            android:layout_height="wrap_content"
            android:text="Store Skagastølstind"
            android:id="@+id/button3"/>

        <!--<Button
            style="@style/QuestionButtonStyle"
            android:layout_height="wrap_content"
            android:text="Surtningssui"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_marginBottom="8dp" />-->

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LargeTextSizeStyle"
        android:text="30 sekunder igjen"
        android:id="@+id/timeLeftTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

</LinearLayout>
