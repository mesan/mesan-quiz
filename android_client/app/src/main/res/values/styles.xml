<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mesan_red</item>
        <item name="colorPrimaryDark">@color/mesan_red_dark</item>
        <item name="colorAccent">@color/mesan_grey</item>
    </style>

    <style name="QuestionButtonStyle" parent="Widget.AppCompat.Button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="LargeTextSizeStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

